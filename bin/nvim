#!/bin/bash
# Launch neovim with lace config
# Usage: nvim [args...]

SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
CONFIG_DIR="$(dirname "$SCRIPT_DIR")/config"

# Use NVIM_APPNAME to isolate this config's data directory
export XDG_CONFIG_HOME="$CONFIG_DIR"
export XDG_DATA_HOME="${XDG_DATA_HOME:-$HOME/.local/share}/lace"
export XDG_STATE_HOME="${XDG_STATE_HOME:-$HOME/.local/state}/lace"

exec nvim "$@"
